<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Image"
        android:padding="20dp"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_chooseImage"
        />

    <ImageView
        android:id="@+id/image_addPost"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/button_chooseImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description :"
        android:id="@+id/textview_description"
        android:layout_below="@+id/image_addPost"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:layout_alignParentLeft="true"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:id="@+id/editText_description"
        android:hint="Enter Description Here"
        android:layout_below="@+id/textview_description"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_uploadAll"
        android:layout_below="@+id/editText_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Upload"
        android:textSize="15dp"

        />


</RelativeLayout>